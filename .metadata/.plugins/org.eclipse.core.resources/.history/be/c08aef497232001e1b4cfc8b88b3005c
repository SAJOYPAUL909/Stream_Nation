<div class="container-fluid" id="mainBox">
		
	<div class="d-flex flex-column align-items-center">
		 
		<h1 class="text-light pt-3 mb-5" style="font-family: 'Montserrat', sans-serif; font-weight: 900">See All Media List</h1>

		<mytag:printmedialist list="${requestScope.mediaList}"/>

		<% 
		
			int offset = (Integer)request.getAttribute("offset");
			int limit = (Integer)request.getAttribute("limit");
			int remaining = (Integer)request.getAttribute("remaining");
			
			/* agar database me ele limit se jada ya equal bache hai,
			to hum ek baar me 5 row ko read kar sakte h,
			no issue */
			if(remaining != 0 && limit <= remaining) {
				
				offset+=5;
				remaining-=5;
				
				String url = "get-list-media?offset="+offset+"&remaining="+remaining+"&limit="+limit;
				out.println("<button class='btn btn-outline-light'><a href='"+url+"'>NEXT PAGE</a></button>");
				System.out.println("first limit = "+limit+" remaining = "+remaining);
				
			}
			
			/* but agar limit > remaining,
			it means that we will have to change limit to remaining,
			means jitne ele bache utne hi element lekar aao */
			else if(remaining != 0 && limit > remaining) {
				
				offset+=5;
				limit = remaining;
				remaining = 0;
				
				
				request.setAttribute("limit", limit);
				request.setAttribute("remaining", remaining);
				request.setAttribute("offset", offset);
				out.println("<button class='btn btn-outline-light'><a style='text-decoration: none;' href='get-list-media'>NEXT PAGE</a></button>");
				System.out.println("second limit = "+limit+" remaining = "+remaining);
			}
			
		%>
		
	</div>
</div>

